<CustomNavCard@BoxLayout>:
	background_color: (0, 0, 0, 0)
	background_normal: ""
	canvas.before:
		Color:
			rgba: (107/255, 22/255, 138/155, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [12]

