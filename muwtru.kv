<ReturnHomeButton>:


<MainWindow>:
    name: "Main"

	GridLayout:
		rows: 7
		padding: 30
		#spacing: 20

		Image:
			source: 'assets/navigation_tools/login.png'
			size_hint: (1, 1)

		Label:
			text: "Email: "
			font_name: 'Poppins-Regular'
			size_hint: (.7, 0.3)

		CustomTextInput:
			id: email
			font_name: 'Poppins-Regular'
			multiline: False
			font_size: 18
			#padding_y: (10, 10)
			size_hint: (.7, 0.3)

		Label:
			text: "Password: "
			font_name: 'Poppins-Regular'
			halign: 'left'
			size_hint: (.7, 0.3)

		CustomTextInput:
			id: passw
			multiline: False
			font_name: 'Poppins-Regular'
			password: True
			font_size: 18
			#padding_y: (10, 10)
			size_hint: (.7, 0.3)

		GridLayout:
			rows: 3
			spacing: 15
			size_hint: (.7, 1)
			padding: 23
			RoundedGreenButton:
				text: "login"
				size_hint: .8, None
				color: 'black'
				font_name: 'Poppins-Bold.ttf'
				on_release:
					root.login(email.text, passw.text)
					root.manager.transition.direction = "left"

			Button:
				text: "don\'t have account ah?\ncreate a new account"
				size_hint: .8, None
				background_color: 'brown'
				on_release:
					app.root.current = "Sixth"
					root.manager.transition.direction = "left"

		Widget:


<SecondWindow>:
    name: "Second"
	#:import NavBar components.widgets.nav_bar.NavBar
	##:import HomeSubjects components.widgets.home_subjects.HomeSubjects
    GridLayout:
        cols: 1
        rows: 3

        BoxLayout:
            size_hint_y: None
            height: dp(50)
			#size_hint: 1, 1
			pos_hint: {'top': 1}
			background_normal: ''
			canvas.before:
				Color:
					rgba: (107/255, 22/255, 138/155, 1)
