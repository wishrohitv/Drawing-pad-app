<FifthWindow>:
    name: "Fifth"
	BoxLayout:
		orientation: "vertical"

		ScrollView:
			do_scroll_x: False
			do_scroll_y: True

			Label:
				id: java
				size_hint_y: None
				height: dp(500)
				text_size: self.width, None
				size: self.texture_size
				padding: 10, 10
		Button:
			text: "back"
			background_color: 'blue'
